<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Bài Viết</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 600px;
            margin: auto;
            margin-top: 20px;
        }

        .post-form {
            display: flex;
            flex-direction: column;
        }

        .post-form input {
            resize: none;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 20px;
            font-size: 16px;
        }

        .post-form button {
            background-color: #4267B2;
            color: #fff;
            border: none;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

        /* Modal styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            /* Canh chỉnh dọc */
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            width: 80%;
            max-width: 400px;
            text-align: center;
        }

        .header {
            display: flex;
            justify-content: flex-start;
            align-self: flex-start;
            margin-bottom: 10px;
            /* Khoảng cách giữa ảnh và tiêu đề */
        }

        .header img {
            margin-right: 10px;
            /* Khoảng cách giữa ảnh và tiêu đề */
        }

        .close-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
        }

        .image-preview {
            margin-top: 20px;
        }

        .image-preview img {
            width: 100%;
            border-radius: 10px;
        }

        /* Input for image upload */
        .image-input {
            display: none;
        }

        .image-input-container {
            width: 100%;
            height: 50px;
            border-radius: 10px;
            border: 1px solid #ccc;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .image-input-container p {
            margin: 0;
        }

        .image-input-label {
            cursor: pointer;
            margin-top: 2px;
            display: inline-block;
            margin-left: 10px;
            width: 50px;
            height: 45px;
        }

        .image-input {
            display: none;
        }
    </style>
</head>

<body>

    <div class="container">
        <h2>Đăng Bài Viết</h2>
        <div class="post-form">
            <input onclick="openModal()" placeholder="Bạn đang nghĩ gì?" id="postContent"></textarea>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal" id="myModal">
        <div class="modal-content">
            <div class="header">
                <img style="border-radius: 50%; width: 50px; height: 50px;"
                    src="https://static-images.vnncdn.net/files/publish/2022/9/3/bien-vo-cuc-thai-binh-346.jpeg" alt="">
                <h2>vercel</h2>
            </div>
            <textarea style="width:100%; height: 200px; font-size: 20px; border: 0;" id="" class=""
                placeholder="bạn đang nghĩ gì?"></textarea>
            <span class="close-btn" onclick="closeModal()">&times;</span>
            <div class="image-input-container">
                <p>Thêm vào bài viết của bạn</p>
                <img src="https://png.pngtree.com/png-vector/20190916/ourlarge/pngtree-gallery-icon-for-your-project-png-image_1731100.jpg" alt="Choose Image" class="image-input-label" onclick="document.getElementById('imageInput').click()">
                <input type="file" id="imageInput" class="image-input" accept="image/*" onchange="previewImage()">
            </div>
            <div class="image-preview" id="imagePreview"></div>
            <button
                style="width: 100%; height: 50px; background-color: rgb(0, 200, 255); color: #f4f4f4; border: 0; border-radius: 10px; font-size: 20px;">Đăng</button>
        </div>
    </div>

    <script>
        function openModal() {
            document.getElementById('myModal').style.display = 'flex';
        }

        function closeModal() {
            document.getElementById('myModal').style.display = 'none';
        }

        function previewImage() {
            const input = document.getElementById('imageInput');
            const preview = document.getElementById('imagePreview');

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    preview.innerHTML = '';
                    preview.appendChild(img);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>

</body>

</html>