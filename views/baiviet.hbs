<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <title>Đăng Bài Viết</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 600px;
            margin: auto;
            margin-top: 20px;
        }

        .post-form {
            display: flex;
            flex-direction: column;
        }

        .post-form input {
            resize: none;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 20px;
            font-size: 16px;
        }

        .post-form button {
            background-color: #4267B2;
            color: #fff;
            border: none;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

    </style>
</head>

<body>

    <div class="container">
        <h2>Đăng Bài Viết</h2>
        <div class="post-form">
            <input placeholder="Bạn đang nghĩ gì?" id="postContent" class="post" readonly>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="myModal" aria-hidden="true" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <img style="border-radius: 50%; width: 50px; height: 50px;"
                        src="data:image/jpeg;base64,{{user.avatar}}" alt="">
                    <h2>{{user.username}}</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/postbaiviet" method="post">
                        <div class="form-group">
                            <input id="content" class="form-control" placeholder="bạn đang nghĩ gì?">
                        </div>
                        <div class="form-group">
                            <p>Thêm vào bài viết của bạn</p>
                            <img src="https://png.pngtree.com/png-vector/20190916/ourlarge/pngtree-gallery-icon-for-your-project-png-image_1731100.jpg"
                                alt="Choose Image" class="image-input-label"
                                onclick="document.getElementById('images').click()">
                            <input type="file" id="images" class="images" accept="image/*" onchange="previewImage()">
                            <div class="image-preview" id="imagePreview"></div>
                        </div>
                        <button
                            style="width: 300px; height: 50px; background-color: rgb(0, 200, 255); color: #f4f4f4; border: 0; border-radius: 10px; font-size: 20px;"
                            type="submit">Đăng</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
       document.addEventListener('DOMContentLoaded', function () {
        previewImage( )
            $('#postContent').on('click', function () {
                $('#myModal').modal('show');
            });
        })

        function previewImage() {
            const input = document.getElementById('images');
            const preview = document.getElementById('imagePreview');

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    preview.innerHTML = '';
                    preview.appendChild(img);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>

</body>

</html>