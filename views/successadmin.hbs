<!-- your_template.hbs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Template</title>
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background-color: #f4f4f4;
            font-family: 'Arial', sans-serif;
        }

        p {
            font-weight: bold;
            font-size: 50px;
            color: #1E90FF;
            text-align: center;
            margin-bottom: 20px; /* Khoảng cách giữa h3 và button */
        }

        button {
            width: 150px;
            height: 40px;
            background-color: #1E90FF;
            border: none;
            border-radius: 5px;
            color: white;
            cursor: pointer;
            font-size: 16px;
            display: block;
            margin: 0 auto; /* Để nút nằm giữa màn hình */
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <p>{{message}}</p>
    <form action="/admin" method="get">
        <button type="submit">Quay lại trang chủ</button>
    </form>
</body>

</html>