<!DOCTYPE>
<html>

<head>
    <title>Edit</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="jumbotron text-center">
        <h1 class="text-center"> Sửa chap</h1>
        <hr><br>
        <form method="post" action="" enctype="multipart/form-data">
            <div class="row">
                <span class="col-lg-2"></span>
                <label class="col-lg-2">manganame: </label>
                <select class="col-lg-4" id="mangaName" name="mangaName">
                    <option value="{{data.mangaName}}">{{data.mangaName}}</option>
                    <script>
                        $(document).ready(function () {
                            $.get('/getmanga', function (manga) {
                                if (manga && manga.length > 0) {
                                    manga.forEach(function (manga) {
                                        $('#mangaName').append($('<option>', {
                                            value: manga.manganame,
                                            text: manga.manganame
                                        }));
                                    });
                                }
                            });
                        });
                    </script>
                </select>
            </div><br>

            <div class="row">
                <span class="col-lg-2"></span>
                <label class="col-lg-2">number: </label>
                <input class="col-lg-4" required type="number" id="number" name="number" placeholder="Nhập tên chap"
                    value="{{data.number}}">
            </div><br>

            <div class="row">
                <span class="col-lg-2"></span>
                <label class="col-lg-2">viporfree: </label>
                <select class="col-lg-4" id="viporfree" name="viporfree">
                    <option value="{{data.viporfree}}">{{data.viporfree}}</option>
                </select>

                <script>
                    $(document).ready(function () {
                        $.get('/viporfrees', function (data) {
                            if (data && data.length > 0) {
                                data.forEach(function (viporfreeValue) {
                                    $('#viporfree').append($('<option>', {
                                        value: viporfreeValue,
                                        text: viporfreeValue
                                    }));
                                });
                            }
                        });
                    });
                </script>
            </div><br>
            <div class="row">
                <span class="col-lg-2"></span>
                <label class="col-lg-2">image: </label>
                <input class="col-lg-4" required type="file" id="image" name="image" accept="image/*" value="" multiple>
                {{!-- <br>
                {{#if data.images}}
                 <td >
                        <div  style="display: flex; flex-wrap: wrap; justify-content: flex-start; ">
                            {{#each data.images}}
                            <div style=" width: calc(100% / 11);  margin: 10px;">
                                <img src="data:image/jpeg;base64,{{this}}" style="width: 50px; height: 50px;" loading="lazy">
                            </div>
                            {{/each}}
                        </div>
                    </td>
                    {{/if}} --}}
            </div><br>
            
            <div class="row">
                <span class="col-lg-2"></span>
                <label class="col-lg-2">price: </label>
                <input class="col-lg-4" required type="number" id="price" name="price" placeholder="Nhập giá chap"
                    value="{{data.price}}">
            </div><br>
            
            
            <br>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">sửa</button>
            </div>

        </form>
    </div>
</body>

</html>